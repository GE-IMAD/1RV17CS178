<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acceptPat">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/BtnGetDate"
        android:layout_width="118dp"
        android:layout_height="82dp"
        android:layout_marginStart="146dp"

        android:layout_marginLeft="146dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="147dp"
        android:layout_marginRight="147dp"
        android:layout_marginBottom="544dp"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/calender"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="dateselect"/>

    <TextView
        android:id="@+id/dateText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/BtnGetDate"
        android:layout_marginBottom="-112dp"
        android:hint="Select Date"


        android:gravity="center"
        android:text=""
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dateText"
        android:id="@+id/timeEdit"
        android:layout_marginBottom="-112dp"
        android:hint="Select Time"
        android:gravity="center"
        android:textSize="16sp"/>



    <TextView
        android:id="@+id/acceptpat"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:layout_alignBottom="@id/timeEdit"
        android:layout_marginBottom="-112dp"
        android:background="@drawable/input_back"
        android:text="Confirm Patient Appointment"
        android:gravity="center"
        android:textSize="20dp"
        android:onClick="acceptpat"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="60dp"/>


</RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>